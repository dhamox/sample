#include<stdio.h>
int main()
{
    int n,reversed=0,remainder;
    printf("Enter a number:");
    scanf("%d",&n);
    do{
        remainder=n % 10;
        reversed=reversed * 10 +remainder;
        n/= 10;
    }
    while(n!=0);
    printf("Reversed number= %d",reversed);
    return 0;
}